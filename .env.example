# CSV Data Analyst Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# API CONFIGURATION (REQUIRED)
# ============================================================================

# Google Gemini API Key - Get from Google Cloud Console
# Format: Should start with 'AIza' and be 39 characters long
GOOGLE_API_KEY=your_google_api_key_here

# ============================================================================
# APPLICATION LIMITS
# ============================================================================

# Maximum file size for CSV uploads (in bytes)
# Default: 50MB (50000000 bytes)
MAX_FILE_SIZE=50000000

# Maximum number of conversation messages to keep in memory
# Default: 10 (recommended range: 5-50)
MAX_CONVERSATION_HISTORY=10

# Maximum length of user queries (in characters)
# Default: 1000
MAX_QUERY_LENGTH=1000

# Maximum length of AI responses (in characters)
# Default: 10000
MAX_RESPONSE_LENGTH=10000

# ============================================================================
# VISUALIZATION SETTINGS
# ============================================================================

# Default chart library to use for visualizations
# Options: plotly, matplotlib
# Default: plotly (recommended for interactive charts)
DEFAULT_CHART_LIBRARY=plotly

# Default chart dimensions (in pixels)
CHART_WIDTH=800
CHART_HEIGHT=600

# ============================================================================
# PERFORMANCE SETTINGS
# ============================================================================

# Pandas chunk size for processing large files
# Default: 10000 (adjust based on available memory)
PANDAS_CHUNKSIZE=10000

# Memory limit for data processing (in MB)
# Default: 1000MB (1GB)
MEMORY_LIMIT_MB=1000

# ============================================================================
# SECURITY SETTINGS
# ============================================================================

# Enable code execution by the AI agent
# Options: true, false
# Default: true (required for data analysis)
ENABLE_CODE_EXECUTION=true

# ============================================================================
# FILE HANDLING
# ============================================================================

# Temporary directory for file processing
# Default: temp (relative to project root)
TEMP_DIR=temp

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Enable debug mode for detailed logging
# Options: true, false
# Default: false
DEBUG_MODE=false

# Logging level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
LOG_LEVEL=INFO

# Enable performance profiling
# Options: true, false
# Default: false (only enable for development)
ENABLE_PROFILING=false